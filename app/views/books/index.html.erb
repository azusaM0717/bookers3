<%= render 'users/info', user: @user %>

<%= render 'new', book: @book %>

<h1>Books</h1>
<% @books.each do |book| %>
  <div>
    <%= link_to book_path(book.id) do %>
      <%= image_tag book.get_image %>
    <% end %>
    
    <p><%= image_tag book.user.get_profile_image(100,100) %></p>
    <p><%= book.title %></p>
    <p><%= book.body %></p>
  </div>
<% end %>